= form_for(@hub) do |f|
  - if @hub.errors.any?
    #error_explanation
      %h2
        = pluralize(@hub.errors.count, "error")
        prohibited this hub from being saved:
      %ul
        - @hub.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit
