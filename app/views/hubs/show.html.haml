%p#notice= notice

%p
  %b Hub Name:
  = @hub.name

.row
  .span8
    %table.table.table-condensed
      %caption
        %h3 Recent Posts
      %tbody
        = render partial: 'post', collection: @hub.posts

%h2 Add a post:
= form_for([@hub, @hub.posts.build]) do |f|
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :content
    %br
    = f.text_area :content
  .actions
    = f.submit

= link_to 'Edit', edit_hub_path(@hub)
|
= link_to 'Back', hubs_path
