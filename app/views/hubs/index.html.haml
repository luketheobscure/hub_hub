%h1 Listing hubs

%table.table
  %thead
    %tr
      %th Name
      %th
      %th
      %th
  %tbody
    - @hubs.each do |hub|
      %tr
        %td= hub.name
        %td= link_to 'Show', hub
        %td= link_to 'Edit', edit_hub_path(hub)
        %td= link_to 'Destroy', hub, method: :delete, data: { confirm: 'Are you sure?' }

