<p id="notice"><%= notice %></p>

<p>
  <b>Hub Name:</b>
  <%= @hub.name %>
</p>

<h2>Posts</h2>
<% @hub.posts.each do |post| %>
    <p>
      <b>Title:</b>
      <%= post.title %>
      <%= link_to post.title, controller: "posts", action: "show", id: post.id,
              hub_id: @hub.id  %>
    </p>
<% end %>

<h2>Add a post:</h2>
<%= form_for([@hub, @hub.posts.build]) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Edit', edit_hub_path(@hub) %> |
<%= link_to 'Back', hubs_path %>
