.hero-unit
  %h1 MindHub
  %p Connecting California's Central Valley
.row
  .span8
    %table.table.table-bordered
      %thead
        %tr
        %th Post
      %tbody
        - @posts.each do |post|
          %tr
            %td
              %table
                %tbody
                  %tr
                    %td
                      %i.icon-arrow-up
                      %br
                      %i.icon-arrow-down.pull-left
                    %td
                      .post
                        =link_to post.title, controller: 'posts', action: 'show', id: post.id,
                          hub_id: post.hub.id
                      %br
                      %p{ style: "margin-left: 20px;" }
                        SubHub:
                        =link_to post.hub.name, controller: 'hubs', action: 'show',
                          id: post.hub.id


= link_to "All Hubs", hubs_path
