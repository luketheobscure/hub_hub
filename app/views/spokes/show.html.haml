%p#notice= notice

.page-header
  %small The
  %h1
    = @spoke.name
  %small Spoke

.row
  .span8
    .well
      - if user_signed_in?
        .row
          .offset1
            %script
              $(function () {
              $(".collapse").collapse()
              });
            %a.btn.btn-large.btn-new-post.span4{ href: '#',
              style: "color: white; ", "data-toggle" => "collapse",
              "data-target" => '#create-post' } Create Post
        .row
          .collapse.in#create-post
            %h2 Add a post:
            = form_for([@spoke, Post.new], html: { class: 'form-horizontal' }) do |f|
              %fieldset
                .control-group
                  %label.control-label= f.label :name
                  .controls
                    = f.text_field :name
                .control-group
                  %label.control-label= f.label :title
                  .controls
                    = f.text_field :title
                .control-group
                  %label.control-label= f.label :content
                  .controls
                    = f.text_area :content
              .form-actions
                = f.submit 'Post', class: 'btn btn-primary'
      - else
        .row
          .offset1
            %a.btn.btn-large.btn-new-post.disabled.span4{ href: '#',
              style: "color: white; " } Create Post

    %table.table.table-condensed
      %caption
        %h3 Recent Posts
      %tbody
        = render partial: 'post', collection: @spoke.posts

  .span4
    .well
      %h2= @spoke.name

      %p= @spoke.description

      = link_to 'Edit', edit_spoke_path(@spoke)
