%tr
  %td
    %i.icon-arrow-up
    %br
    %i.icon-arrow-down.pull-left
    %br
    %i.icon-star-empty
  %td
    .post
      =link_to post.title, controller: 'posts', action: 'show', id: post.id,
        spoke_id: post.spoke.id
    %br
    %p
      added
      = post.updated_at
      in spoke
      %script
        $(function () {
        $("#spoke-link-#{post.id}").popover();
        });
      = link_to(post.spoke.name, post.spoke,
        class: 'label label-inverse', rel: 'popover', id: "spoke-link-#{post.id}",
        'data-content' => "Description: #{post.spoke.description}",
        'data-original-title' => "Spoke: #{post.spoke.name}")
