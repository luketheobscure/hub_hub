- if user_signed_in?
  = form_tag(spoke_post_flag_path(favoritable.spoke.id, favoritable.id), class: "form-horizontal") do
    = hidden_field_tag :id, favoritable.id
    = hidden_field_tag :flag_type, :favorite

    - if current_user.flagged?(favoritable, :favorite)
      = button_tag type: "submit", class: "btn btn-mini btn-success" do
        %i.icon-star.pull-left

    - else
      = button_tag type: "submit", class: "btn btn-mini" do
        %i.icon-star.pull-left

- else
  %p
    %span.label
      %i.icon-star{ style: "width: 23px;" }
